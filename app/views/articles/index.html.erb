<h1>My Articles</h1>
<ul>
  <% @articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
    <%= link_to "Delete this article", article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
  <% end %>
</ul>
<%= link_to "Create a new article", new_article_path %>
